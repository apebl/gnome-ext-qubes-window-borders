{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "off",
        "noForEach": "off",
        "noStaticOnlyClass": "off"
      },
      "correctness": {
        "noConstructorReturn": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noUselessElse": "off",
        "noVar": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
